{
  "env": {
    "browser": true,
    "node": true,
    "es6": true
  },

  "ecmaFeatures": {
    "modules": true,
    "jsx": true
  },

  "plugins": [
    "react"
  ],

  "rules": {
    "strict": [2, "global"],
    "quotes": [1, "single"],
    "no-trailing-spaces": 1,
    "eol-last": 1,
    "no-use-before-define": [2, "nofunc"],
    "no-unused-vars": 2,
    "react/jsx-uses-react": 1
  }
}
